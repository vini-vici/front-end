{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "noEmit": true,
    "lib": [
      "DOM",
      "ES2018"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  }
}